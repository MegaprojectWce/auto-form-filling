<div class="container mt-1">

  {{! <h3
    style="
    display: flex;
    justify-content: center;
" }}
  {{!-- >{{viewTitle}}</h3> --}}

  {{! <button><a href="/list">View Data</a></button> }}
  <form
    action="/"
    method="POST"
    autocomplete="off"
    onsubmit="alert('Form submitted succesfully')"
    id="form"
    class="mt-3"
  >
    {{!-- <input type="hidden" name="_id" value="{{employee._id}}" /> --}}
    <code id="result">live transcript here ...</code>
    {{! <button type="button" id="toggle">Toggle listening</button> }}
    <fieldset style="margin-top: 7rem;">
      <h2 class="text-center">Application form</h2>
      <div class="input_fields">
        <h3 class="mt-3">Personal Details</h3>
        <label>Name
          <input required type="text" name="name" />
        </label>
        <div class="form-row">
          <div class="form-group col-md-6">
            <label>Gender</label>
            <input required type="text" name="gender" />
          </div>
          <div class="form-group col-md-6">
            <label>Birth Date</label>
            <input type="text" name="birthdate" />
          </div>
        </div>
        <label>Father's  Name
          <input required type="text" name="fathername" />
        </label>
        <label>Mother's Name
          <input required type="text" name="mothername" />
        </label>

        <label>Do you belong to minority
          <input name="minority">
          </input>
        </label>
         <div class="form-row">
          <div class="form-group col-md-6">
            <label for="inputEmail4">Email</label>
            <input type="email" name="email" placeholder="Email" />
          </div>
          <div class="form-group col-md-6">
            <label>Mobile No.</label>
            <input type="mobile" name="mobile" />
          </div>
        </div>

        <label>Nationality
          <input name="nationality">
          </input>
        </label>
        <label>Marital Status
          <input name="maritalstatus">
          </input>
        </label>
        <label>Community
          <input name="community">
          </input>
        </label>
        <label>Address
          <textarea name="address">
          </textarea>
        </label>
        <label>Education
          <input name="education">
          </input>
        </label>

        <label>Degree Subject in Graduation
          <input name="degreesubjectingraduation">
          </input>
        </label>
        <label>Percentage at graduation level
          <input name="graduationpercentage">
          </input>
        </label>

        <h3 class="mt-3">Examination Details</h3>
        <label>For which examination you like to be considered
          <input name="examinationyouliketobeconsidered">
          </input>
        </label>
        <label>Number of Attempts already made in Civil Services
          <input name="numberofattempts">
          </input>
        </label>
        <label>Language medium for Examination for paper 1 to paper 5
          <input name="languagemediumforexaminationforpaper1topaper5">
          </input>
        </label>
        <label>Language medium for Examination for paper 6 and paper 7
          <input name="languagemediumforexaminationforpaper6andpaper7">
          </input>
        </label>
        <label>Do you hail from Arunachal Pradesh/Manipur/Meghalaya
          <input name="doyouhailfromArunachalPradeshManipur">
          </input>
        </label>
      </div>

      <button type="submit">Submit</button>
    </fieldset>

    {{! <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
        <a class="btn btn-secondary" href="/list"><i class="fa fa-list-alt"></i> View All</a>
    </div> }}
  </form>

</div>